local java = dofile("java.knit")

local tools = java.toolchain("")
local rules = java.rules(tools)

return b{
    $ com/craftinginterpreters/lox/Lox.class:
        $(tools.javac) com/craftinginterpreters/lox/TokenType.java
        $(tools.javac) com/craftinginterpreters/lox/Scanner.java
        $(tools.javac) com/craftinginterpreters/lox/Token.java
        $(tools.javac) com/craftinginterpreters/lox/Lox.java

    $ com/craftinginterpreters/tool/AstPrinter.class:
        $(tools.javac) com/craftinginterpreters/lox/Expr.java
        $(tools.javac) com/craftinginterpreters/lox/AstPrinter.java

    rules
}
